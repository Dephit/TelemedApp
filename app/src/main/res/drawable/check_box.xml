<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
            <shape android:shape="rectangle">
                <solid android:color="@color/gray_text_color"/>
                <stroke android:color="@color/primary_button_color" android:width="2dp"/>
            </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_button_color"/>
            <stroke android:color="@color/gray_text_color" android:width="2dp"/>
        </shape>
    </item>
</selector>